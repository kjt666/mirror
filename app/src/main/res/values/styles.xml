<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="activity_base" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/black</item>
        <item name="background">@color/black</item>
    </style>

    <style name="btn_base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:background">#59EEDE</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="btn_enabled" parent="btn_base">
        <item name="android:enabled">false</item>
        <item name="android:alpha">0.5</item>
    </style>

    <style name="btn_frame" parent="btn_base">
        <item name="android:background">@drawable/shape_main_frame</item>
        <item name="android:textColor">@color/main_color</item>
    </style>

    <style name="error_tip">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:textColor">#FF7F7F</item>
        <item name="android:visibility">gone</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="quota_description">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white_20</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ll_input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="tv_input_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">19dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ed_input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@null</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white30</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ed_input_phone" parent="ed_input">

        <item name="android:inputType">number</item>
        <item name="android:maxLength">10</item>
    </style>

    <style name="tv_personal_input_title" parent="tv_input_title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ed_personal_input" parent="ed_input">
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="ll_personal_arrow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">19dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="iv_personal_arrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="ll_pseronal_input" parent="ll_input">
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="loan_common_item_ll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="loan_common_tv_title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="loan_common_tv_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white_90</item>
        <item name="android:textSize">16sp</item>
    </style>


</resources>